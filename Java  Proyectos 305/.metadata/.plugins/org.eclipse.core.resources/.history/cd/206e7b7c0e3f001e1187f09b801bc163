import java.util.Scanner;
public class Terreno {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int base, altura, area, perimetro;
		int cerca=260;
		int precio=1800;
		String resp;
		System.out.println("Introduce medida de base de terreno");
		base=sc.nextInt();
		System.out.println("Introduce medida de altura de terreno");
		altura=sc.nextInt();
		area=(base*altura);
		System.out.println("El área de tu terreno es de: " + area  + " metros cuadrados");
		perimetro=(base+base+altura+altura);
		System.out.println("El perimetro de tu terreno es de: " + perimetro + " metros");
		System.out.println("El costo de tu terreno es de: " + (area*precio) + " pesos" );
		System.out.println("¿Deseas cercar el terreno? (Si/No)");
		resp=sc.next();
		if (resp.equalsIgnoreCase("si")) {
			
		}
	}
}
